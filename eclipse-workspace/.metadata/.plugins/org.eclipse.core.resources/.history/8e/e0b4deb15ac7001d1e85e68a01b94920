package v2_UI;
import java.awt.*;  
  
// class GUI  
public class GUI 
{    
	
	Button my_button;
	Label my_label;
	Frame my_frame;
	
   // initializing using constructor  
   GUI() 
   {  
	  
      // creating a button 
	   this.my_frame = new Frame();
	   this.my_button = new Button("Log in");  
	   this.my_label = new Label();
	   
      // setting button position on screen  
	   this.my_button.setBounds(30,100,80,30);  
	   this.my_label.setBounds(15, 15, 300, 50); 
	   
      // adding button into frame    
	  this.my_frame.add(this.my_label); 
      this.my_frame.add(this.my_button);  
  
      // frame size 300 width and 300 height    
      this.my_frame.setSize(300,300);  
  
      // setting the title of Frame  
      this.my_frame.setTitle("Mi6 Login");   
          
      // no layout manager   
      this.my_frame.setLayout(null);   
  
      // now frame will be visible, by default it is not visible    
      //this.my_frame.setVisible(true);  
   }    
}    